{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@env/*": ["./env/*"],
      "@services/*": ["./services/*"],
      "@components/*": ["./components/*"],
      "@data/*": ["./data/*"],
      "@screens/*": ["./app/screens*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "class-variance-authority.d.ts",
    "CustomSwitch.js",
    "app/screens/profileManagement"
  ]
}
